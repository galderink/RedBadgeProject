@model RedBadgeProject.Models.AccountStatus.AccountStatusModel

<!DOCTYPE html>
<html>
<head>
    <title>Account Status Details - FitnessBuddy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        @if (Model == null)
        {
            <div class="alert alert-danger" role="alert">
                <h2>Account Status Not Found</h2>
            </div>
        }
        else
        {
            <h2 class="mb-4">Account Status Details</h2>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h4>Name</h4>
                    <p>@Model.FirstName @Model.LastName</p>
                </div>
                <div class="col-md-6">
                    <h4>Email</h4>
                    <p>@Model.Email</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h4>Address</h4>
                    <p>@Model.Address</p>
                </div>
                <div class="col-md-6">
                    <h4>Subscription</h4>
                    <p>@Model.Subscription</p>
                </div>
            </div>

            <div class="mt-4">
                <a href="/Account/UserPage" class="btn btn-primary">Back</a>
            </div>
        }
    </div>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        h2 {
            color: #007bff;
            font-weight: bold;
        }

        h4 {
            color: #007bff;
        }

        p {
            color: #666;
            margin-bottom: 0;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>





