@model RedBadgeProject.Models.User.UserLogin
@{
    ViewData["Title"] = "Login";
}
<h1 class="display-4 mb-3">Login</h1>
<form asp-action="Login" method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email"></span>
        </div>
    <div class="form-floating mb-3">
        <input type="Password" class="form-control" asp-for="Password" placeholder="Password">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password"></span>
        </div>
        <div class="d-flex flex-column gap-2">
            <button type="submit" class="btn btn-primary">Login</button>
            <a asp-action="Register" asp-controller="Account" class="text-center py-2">
                Register as a new user
            </a>
        </div>
</form>