<!DOCTYPE html>
<html>
<head>
    <title>FitnessBuddy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 20px;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            margin: 0 auto;
        }

        .clickable-box {
            cursor: pointer;
        }

        .clickable-box:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out;
        }

        .card-title {
            font-size: 20px;
            font-weight: bold;
        }

        .card-text {
            font-size: 16px;
            color: #666;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex justify-content-center w-100">FitnessBuddy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Login" asp-controller="Account">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card clickable-box" onclick="location.href='@Url.Action("CreateMessage", "Messages")'">
                        <div class="card-body">
                            <h5 class="card-title">Messages</h5>
                            <p class="card-text">Click here to view your messages.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card clickable-box" onclick="location.href='@Url.Action("UsersClass", "UserClass")'">
                        <div class="card-body">
                            <h5 class="card-title">Available Classes</h5>
                            <p class="card-text">Click here to view the available classes.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card clickable-box" onclick="location.href='@Url.Action("AccountStatusDetail", "AccountStatus")'">
                        <div class="card-body">
                            <h5 class="card-title">Account</h5>
                            <p class="card-text">Click here to view your subscription.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
</body>
</html>
